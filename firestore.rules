rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /sessions/{sessionId} {
      allow read: if isOwner(resource.data.user);
      allow create: if isOwner(request.resource.data.user);
      allow update: if isOwner(resource.data.user) && request.resource.data.user == request.auth.uid;
      allow delete: if isOwner(resource.data.user);
    }

    match /messages/{messageId} {
      allow read: if isOwner(resource.data.user);
      allow create: if isOwner(request.resource.data.user);
      allow update, delete: if false;
    }

    match /pronunciation_analysis/{analysisId} {
      allow read: if isOwner(resource.data.user);
      allow create: if isOwner(request.resource.data.user);
      allow update, delete: if false;
    }

    // Deny everything else by default.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
